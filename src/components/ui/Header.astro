---
import { Menu, Phone } from "@lucide/astro";
import Image from "astro/components/Image.astro";
---

<header class="container-labs flex items-center justify-between gap-2 sticky top-2 z-20 px-4 py-2 bg-black/50 rounded-lg backdrop-blur-lg shadow-md shadow-gray-800/40">
    <a href="#inicio" class="flex items-center hover:scale-120 hover:rotate-45 transition-transform duration-pro">
        <Image src="/logo-cetzz-labs.webp" alt="CetZz Labs" width={1280} height={720} class="w-20">
    </a>

    <button class="lg:hidden text-primary-500" id="menu-toggle">
        <Menu />
    </button>
    <nav class="grow hidden lg:flex px-2" id="mobile-menu" aria-hidden="true">
        <div class="grow flex items-center justify-center gap-4 text-gray-300 font-semibold">
            <a href="#quienes-somos" class="link-btn">Nosotros</a>
            <a href="#servicios" class="link-btn">Servicios</a>
            <a href="#proceso" class="link-btn">Proceso</a>
            <a href="#portafolio" class="link-btn">Portafolio</a>
            <a href="#contacto" class="link-btn">Contacto</a>
        </div>
        <div>
            <a href="#contacto" class="btn-link" title="Contactar">
                <Phone class="size-4" />
            </a>
        </div>
    </nav>
</header>