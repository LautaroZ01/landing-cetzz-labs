---
import Icons from "./Icons.astro";
import { whatsApp } from "../../data/data";
---

<div class="fixed bottom-6 right-6 z-50">
    <a
        href={whatsApp.url}
        target="_blank"
        title={whatsApp.name}
        aria-label={whatsApp.name}
        class="block bg-green-500 text-white rounded-lg shadow-2xl pulse-glow p-4"
    >
        <Icons name={whatsApp.name} />
    </a>
</div>
